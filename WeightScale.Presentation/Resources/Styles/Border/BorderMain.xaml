<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BorderColors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TableCard"
           TargetType="Border">
        <Setter Property="Background"
                Value="{StaticResource Border.Background}" />
        <Setter Property="CornerRadius"
                Value="12" />
        <Setter Property="Margin"
                Value="10 0 10 0" />
        <Setter Property="BorderBrush"
                Value="{StaticResource Border.BorderStroke}" />
        <Setter Property="BorderThickness"
                Value="1" />
    </Style>

    <Style x:Key="TableCardHeader"
           TargetType="Border">
        <Setter Property="Height"
                Value="Auto" />
        <Setter Property="Background"
                Value="{StaticResource Border.Header.Background}" />
        <Setter Property="CornerRadius"
                Value="12,12,0,0" />
    </Style>

</ResourceDictionary>