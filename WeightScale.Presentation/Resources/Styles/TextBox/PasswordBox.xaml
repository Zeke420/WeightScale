<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="TextBoxColors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource {x:Type PasswordBox}}" TargetType="PasswordBox">
        <Setter Property="MinWidth" Value="300" />
        <Setter Property="MaxWidth" Value="300" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Background" Value="{DynamicResource TextBox.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBox.Foreground}" />
    </Style>

</ResourceDictionary>