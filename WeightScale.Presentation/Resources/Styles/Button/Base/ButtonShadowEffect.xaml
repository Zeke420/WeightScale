<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../ButtonColors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <DropShadowBitmapEffect x:Key="ButtonShadowEffect"
                            Color="{StaticResource MainShadow}"
                            Direction="320"
                            Softness="1"
                            ShadowDepth="5"
                            Opacity="0.2"/>
    <DropShadowBitmapEffect x:Key="ButtonShadowEffectMouseNotOver"
                            Color="{StaticResource MainShadow}"
                            Direction="320"
                            Softness="1"
                            ShadowDepth="5"
                            Opacity="0.1"/>
</ResourceDictionary>