<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Styles/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <SolidColorBrush x:Key="ScrollView.Primary.BorderBrush"
                     Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="ScrollView.Primary.Background"
                     Color="{StaticResource Grey}" />
    <SolidColorBrush x:Key="ScrollView.Primary.Thumb"
                     Color="{StaticResource Primary}" />
</ResourceDictionary>