<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ScrollViewTemplate.xaml" />
        <ResourceDictionary Source="/Resources/Styles/ScrollView/Base/ScrollViewColors.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="Template"
                Value="{StaticResource ScrollViewTemplate}" />
        <Setter Property="Selector.SelectedIndex"
                Value="0" />
    </Style>
</ResourceDictionary>